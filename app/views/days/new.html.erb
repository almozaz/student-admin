<h1>Generate pairs for a new day</h1>

<%= form_for @day do |f| %>

  <div class="form-group">
   <label>Day:</label>
   <%= f.text_field :date %>
 </div>

 <div class="actions">
   <%= f.submit "Generate pairs for this date", class: "btn btn-success" %>
 </div>
<% end %>

<script>
  $(function() {

    $('#day_date').datepicker({
      dateFormat: 'dd-mm-yy'
    });

  });
</script>
